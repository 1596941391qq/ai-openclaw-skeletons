{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Layer1 Core Strategy Context",
  "type": "object",
  "required": ["version", "mission", "primary_users", "voice_and_policy", "positioning"],
  "properties": {
    "version": { "type": "string" },
    "mission": {
      "type": "object",
      "required": ["name", "one_liner", "domain", "operating_model"],
      "properties": {
        "name": { "type": "string" },
        "one_liner": { "type": "string" },
        "domain": { "type": "string" },
        "operating_model": { "type": "string" }
      },
      "additionalProperties": false
    },
    "primary_users": {
      "type": "object",
      "required": ["icp", "personas", "jobs_to_be_done"],
      "properties": {
        "icp": { "type": "string" },
        "personas": { "type": "array", "items": { "type": "string" } },
        "jobs_to_be_done": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "voice_and_policy": {
      "type": "object",
      "required": ["tone", "do_use", "avoid"],
      "properties": {
        "tone": { "type": "string" },
        "do_use": { "type": "array", "items": { "type": "string" } },
        "avoid": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "positioning": {
      "type": "object",
      "required": ["problem", "differentiation", "proof"],
      "properties": {
        "problem": { "type": "string" },
        "differentiation": { "type": "array", "items": { "type": "string" } },
        "proof": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
