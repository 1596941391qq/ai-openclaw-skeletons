{
  "name": "PSEO",
  "description": "Complete Programmatic SEO workflow: keyword research → content generation → publishing → indexing",
  "version": "1.1.0",
  "packs": [
    "pseo-pipeline-pack",
    "seo-core-pack",
    "content-generator-pack",
    "gh-pages-publisher-pack",
    "audit-core-pack"
  ],
  "workflow": {
    "steps": [
      {
        "name": "keyword-research",
        "pack": "seo-core-pack",
        "skills": ["keyword-research", "serp-analysis"],
        "description": "Research keywords with real data and analyze SERP features"
      },
      {
        "name": "content-planning",
        "pack": "seo-core-pack",
        "skills": ["content-gap-analysis", "competitor-analysis"],
        "description": "Analyze content gaps and competitor strategy"
      },
      {
        "name": "content-generation",
        "pack": "content-generator-pack",
        "description": "Generate full articles from optimized outlines"
      },
      {
        "name": "pre-publish-optimization",
        "pack": "seo-core-pack",
        "skills": ["on-page-seo-auditor", "schema-markup-generator", "internal-linking-optimizer"],
        "description": "Optimize content before publishing"
      },
      {
        "name": "publishing",
        "pack": "gh-pages-publisher-pack",
        "description": "Publish to GitHub Pages and push to UniFuncs"
      },
      {
        "name": "post-publish-optimization",
        "pack": "seo-core-pack",
        "skills": ["geo-content-optimizer", "technical-seo-checker"],
        "description": "Post-publish optimization and monitoring"
      },
      {
        "name": "audit",
        "pack": "audit-core-pack",
        "description": "Record all operations for compliance"
      }
    ]
  },
  "quickstart": {
    "one_liner": "帮我发一篇PSEO文章",
    "full_command": "pseo publish --keyword 'your-keyword' --project 'your-project'",
    "manual_steps": [
      "keyword-research --keyword 'your-keyword' --output ./research",
      "serp-analysis --keyword 'your-keyword' --output ./serp",
      "content-gap-analysis --competitors 'comp1,comp2' --output ./gaps",
      "content-generator --research ./research --output ./articles",
      "on-page-seo-auditor --article ./articles/article.md",
      "schema-markup-generator --article ./articles/article.md",
      "./cil/cil-gh-pages-publisher.sh publish --keyword 'your-keyword' --article_md './articles/article.md' --setting_file './setting.json'"
    ]
  }
}
